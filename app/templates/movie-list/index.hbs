{{#each model as |movie|}}
 {{!--  {{movie-item-widget id=movie.id title=movie.title overview=movie.overview posterPath=movie.poster_path }} --}}
 
 <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
     {{#link-to  "movie.index" }} 
         <div class="thumbnail">
             <img src={{posterUrlHelper movie.poster_path}} alt={{title}}>
             <div class="caption">
                 <h3>{{movie.title}}</h3>
                 <p>{{movie.overview}}</p>
                 <p>
                     <a href="#" class="btn btn-primary">Action</a>
                     <a href="#" class="btn btn-default">Action</a>
                 </p>
             </div>
         </div>
     {{/link-to}}
 </div>
{{else}}
  <h3>There is no movie.</h3>
{{/each}}
