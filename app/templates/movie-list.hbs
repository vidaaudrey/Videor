<div class="container text-center">
    <h3>{{pageTitle}}</h3>
    category{{category}}
    query{{query}}
    page{{page}}
</div>

{{#each model as |movie|}}
 {{!--  {{movie-item-widget id=movie.id title=movie.title overview=movie.overview posterPath=movie.poster_path }} --}}
 
 <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
     {{#link-to  "movie.index" movie.id}} 
         <div class="thumbnail">
            {{#if movie.poster_path }}
             <img src={{posterUrlHelper movie.poster_path}} alt={{title}}>
            {{else}}
            <img src="//placehold.it/500x750">
            {{/if}}
             <div class="caption">
                 <h3>{{movie.title}}</h3>
                 <p>{{movie.overview}}</p>
                 <p>
                     <a href="#" class="btn btn-primary"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></a>
                     <a href="#" class="btn btn-default"><span class="glyphicon glyphicon-star" aria-hidden="true"></span></a>
                 </p>
             </div>
         </div>
     {{/link-to}}
 </div>
{{else}}
  <h3>There is no movie.</h3>
{{/each}}
